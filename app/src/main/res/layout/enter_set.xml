<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:scaleType="center"
        android:background="#2196F3"
        android:contentDescription="Enter A Set"
        android:id="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="reps"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_reps"
        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/et_reps" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/et_weight"
        android:singleLine="true"
        android:maxLength="5"
        android:shadowColor="#000000"
        style="@style/EditTextCustomHolo"
        android:hint="Weight"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="100dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="lbs   x"
        android:id="@+id/textView2"
        android:layout_marginLeft="13dp"
        android:layout_alignBottom="@+id/et_weight"
        android:layout_toEndOf="@+id/et_weight" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/et_reps"
        android:singleLine="true"
        android:maxLength="3"
        style="@style/EditTextCustomHolo"
        android:shadowColor="#000000"
        android:hint="Reps"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="170dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter A Set"
        android:textStyle="bold"
        android:textSize="45dp"
        android:textColor="#FFFFFF"
        android:id="@+id/textView4"
        android:layout_marginLeft="40dp"


        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true" />
    </RelativeLayout>