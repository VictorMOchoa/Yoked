<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/programs_vertical_margin"
        android:layout_marginBottom="@dimen/programs_vertical_margin"
        android:layout_marginLeft="@dimen/programs_horizontal_margin"
        android:layout_marginRight="@dimen/programs_horizontal_margin"
        android:background="#ffffff">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon_iv"
            android:src="@drawable/arms"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:focusableInTouchMode="false"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01-01-2015"
            android:id="@+id/date_tv"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="19dp"
            android:layout_alignBottom="@+id/icon_iv"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:textColor="#212121"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000 Rep Arms"
            android:id="@+id/workoutLabel"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_above="@+id/subtitle_tv"
            android:layout_toRightOf="@+id/icon_iv"
            android:layout_toEndOf="@+id/icon_iv"
            android:layout_alignParentEnd="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Triceps"
            android:id="@+id/musclesworked_tv"
            android:textSize="9sp"
            android:layout_alignBottom="@+id/icon_iv"
            android:layout_alignLeft="@+id/workoutLabel"
            android:layout_alignStart="@+id/workoutLabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout A"
            android:id="@+id/subtitle_tv"
            android:layout_above="@+id/musclesworked_tv"
            android:layout_alignLeft="@+id/workoutLabel"
            android:layout_alignStart="@+id/workoutLabel"
            android:textSize="10sp"
            android:layout_marginLeft="5dp"
            android:textColor="#212121" />
    </RelativeLayout>
</LinearLayout>
